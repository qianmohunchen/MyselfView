<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/company_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/period_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="不动产公司深圳分不动产公动产公动产公不动产公不动产公不动产公"
        />

    <TextView
        android:id="@+id/period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/company_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/company_tv"
        tools:text="自然月" />

</androidx.constraintlayout.widget.ConstraintLayout>